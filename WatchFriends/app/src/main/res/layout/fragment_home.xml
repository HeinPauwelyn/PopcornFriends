<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewmodel"
            type="nmct.jaspernielsmichielhein.watchfriends.viewmodel.HomeFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/cvCarousel"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"
                app:autoPlay="false"
                app:pageTransformer="flow" />

            <RelativeLayout
                android:id="@+id/rlRecommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="0dp"
                android:layout_below="@id/cvCarousel">

                <TextView
                    android:id="@+id/txtRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:text="@string/recommended_by_friends"
                    style="?android:attr/listSeparatorTextViewStyle" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvRecommended"
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    android:layout_height="330dp"
                    android:layout_below="@id/txtRecommended"
                    app:items="@{viewmodel.recommendedByFriends}" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPopular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/txtPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/popular"
                    android:layout_margin="10dp"
                    style="?android:attr/listSeparatorTextViewStyle" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_margin="0dp"
                    android:layout_below="@id/txtPopular"
                    app:items="@{viewmodel.popular}" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>